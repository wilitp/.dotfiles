# -- Keyboard layout switching mode -----
mode "keyboard" {

        bindsym u exec "setxkbmap -layout us"
        bindsym l exec "setxkbmap -layout latam"
        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+i mode "keyboard"


# this is for ssh to work, don't really know why
exec --no-startup-id /usr/lib/gnome-settings-daemon/gnome-settings-daemon

exec --no-startup-id /usr/bin/gnome-keyring-daemon --start --components=secrets

# -- MONITORS ------------------------

set $laptop_output eDP-1
set $monitor_output HDMI-1

# This is for an extra HDMI monitor to work

# Place laptop's builtin display to the right of the HDMI monitor
exec --no-startup-id xrandr --output eDP-1 --auto --right-of HDMI-1 --auto

mode "monitors" {


        # laptop's builtin display only
        bindsym l exec --no-startup-id xrandr --output eDP-1 --auto --output HDMI-1-0 --off

        # HDMI monitor only
        bindsym m exec --no-startup-id xrandr --output eDP-1 --off --output HDMI-1-0 --auto

        # dual monitor setup
        bindsym d exec --no-startup-id xrandr --output HDMI-1-0 --auto --output eDP-1 --auto --right-of HDMI-1-0

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+m mode "monitors"

